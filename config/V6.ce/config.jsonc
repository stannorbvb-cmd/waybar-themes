    "format-icons": {
      "activated": "Ó∞ï",
      "deactivated": "Û∞æ´"
    }
  },
  "custom/updatespacman": {
    "format": "{}{icon}",
    "return-type": "json",
    "format-icons": {
      "has-updates": " Û∞èñ",
      "updated": ""
    },
    "exec-if": "which waybar-module-pacman-updates",
    "exec": "waybar-module-pacman-updates --no-zero-output"
  },
  "group/tray-expander": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 600,
      "children-class": "tray-group-item"
    },
    "modules": [
      "custom/expand-icon",
      "tray",
      "custom/separator",
      "power-profiles-daemon",
      "network",
      "backlight",
      "bluetooth",
      "custom/separator"
